{# src/vino/PillarBundle/Resources/views/Default/login.html.twig #}

{% extends '::base.html.twig' %}

{% block body %}
    <h1>Inloggen</h1>
    <form class="form-inline" action="{{ path('login_check') }}" method="post">
        <div class="form-group">
            <label for="username">Email:</label>
            <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div class="form-group">
            <label for="password">Paswoord:</label>
            <input class="form-control" type="password" id="password" name="_password" />
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-default" type="submit">Login</button>
    </form>
        <p>Nog geen klant? <a href="{{ path('vino_pillar_register') }}">Registreer dan nu!</a></p>
{% endblock %}
