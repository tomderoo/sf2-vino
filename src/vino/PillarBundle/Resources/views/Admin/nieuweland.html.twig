{# src/vino/PillarBundle/Resources/views/Admin/nieuweland.html.twig #}

{% extends '::base.html.twig' %}

{% block body %}
    <h1>Land toevoegen aan de database</h1>
    <div class="well well-lg">
        {% if form is defined %}
            {{ form_start(form) }}
                {{ form_errors(form) }}

                {# form_row(form.naam) #}
                <div class="form-group">
                    {{ form_label(form.naam, 'Naam', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                    {{ form_errors(form.naam) }}
                    {{ form_widget(form.naam) }}
                    </div>
                </div>

                {# form_row(form.omschrijving) #}
                <div class="form-group">
                    {{ form_label(form.omschrijving, 'Omschrijving', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                    {{ form_errors(form.omschrijving) }}
                    {{ form_widget(form.omschrijving) }}
                    </div>
                </div>

                <div class="col-sm-2"></div>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}